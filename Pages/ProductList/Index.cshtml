@page
@model FirstRazorPage.Pages.ProductList.IndexModel
@{
}

<br />
<div class="container row p-0 m-0">
    <div class="col-9>
        <h2 class="text-center">Product List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white text-center"> New Product </a>
    </div>
    <div class="col-12 border p-3 mt-3 text-center">
        <form method="post">
            @if (Model.Products.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Products.SingleOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="Products.FirstOrDefault().Code"></label>
                        </th>
                        <th>
                            <label asp-for="Products.FirstOrDefault().Qty"></label>
                        </th>
                    </tr>
                    @foreach (var item in Model.Products)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @Html.DisplayFor(p => item.Code)
                            </td>
                            <td>
                                @Html.DisplayFor(p => item.Qty)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id"
                                        onclick="return confirm(" Are you sure you want to delete this item?")"
                                        class="btn btn-danger btn-sm">
                                    Delete
                                </button>

                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">
                                    Edit
                                </a>

                            </td>


                        </tr>
                    }
                </table>
            }
            else
            {
                <p>There is currently no products avaialable to show.</p>
            }
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial.cshtml">
}
